Usage:

      <plugin>
        <groupId>net.timandersen</groupId>
        <artifactId>maven-buildtime-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <executions>
          <execution>
            <id>start-stopwatch</id>
            <phase>validate</phase>
            <goals>
              <goal>start</goal>
            </goals>
          </execution>
          <execution>
            <id>stop-stopwatch</id>
            <phase>verify</phase>
            <configuration>
              <reportUrl>http://localhost:8080/buildtime</reportUrl>
            </configuration>
            <goals>
              <goal>stop</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
